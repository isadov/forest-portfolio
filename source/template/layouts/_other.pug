block variables

doctype html
html
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="" name="author")
    meta(content="" name="description")
    meta(content="" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    //- favicon block start
    //- favicon block end

    link(rel='stylesheet' href='/assets/css/foundation.css')
    link(rel='stylesheet' href='/assets/css/app.css')

    include ../partials/_mapsApi
    script(src='/assets/js/foundation.js' defer)
    script(src='/assets/js/app.js' defer)
    script(type="text/javascript" defer).
      var isMobile = (/iphone|ipad|ipod|android|blackberry|mini|windows\sce|palm/i.test(navigator.userAgent.toLowerCase()));
      if (!isMobile) {
        var desktopJs = document.createElement('script');
        desktopJs.src = '/assets/js/desktop.js';
        desktopJs.async = true;
        document.head.appendChild(desktopJs);
      }

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body
    include ../partials/_preloader
    
    block content

    block footer